<!DOCTYPE html>
<html>
<head>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header">
<!--     FOR SIGNED IN USERS -->
    <% if signed_in? -%>
      <%= link_to 'Home', root_path %></td>
      <%= link_to 'Your Account', user_path(current_user) %></td>
      <%= button_to t(".sign_out"), sign_out_path, method: :delete %>
    
<!--     FOR SIGNED IN USERS -->
    <% else -%>
      <%= link_to 'Home', root_path %></td>
      <%= link_to t(".sign_in"), sign_in_path %>
      <%= link_to t(".sign_up"), sign_up_path %>
    <% end -%>
  </div>

  <div id="flash">
    <% flash.each do |key, value| -%>
      <div id="flash_<%= key %>"><%=h value %></div>
    <% end %>
  </div>

  <%= yield %>
</body>
</html>
